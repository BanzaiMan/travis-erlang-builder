#!/usr/bin/env bash

set -o errexit

[[ ${VERSION} ]] || {
  echo 'Missing $VERSION' >&2
  exit 1
}

if [[ -f ~/.kerl/otp_builds ]] ; then
  sed -i "/^${VERSION}/d" ~/.kerl/otp_builds
fi

bash -x kerl update releases
kerl build "${VERSION}" "${VERSION}"
kerl install "${VERSION}" "${HOME}/otp/${VERSION}"
